    <!-- ------- Formulaire de modification du compte ----------------------- -->

	 <% 
	 	Compte compte = (Compte)request.getAttribute("compte-modif");
	 %>

      <h5>Modifier le compte (identifiant = <%= compte.getIdCompte() %>) </h5>

		<form method="post" action="gestion-compte-servlet">
		  <div class="form-row">
		    <div class="col-md-4 mb-3">
		      <label for="validationDefault01">Solde</label>
		      <input name="pSolde" type="text" class="form-control" id="validationDefault02" value="<%= compte.getSolde() %>" required>
		    </div>

			<div id="selectIdClient" class="col-md-4 mb-3">
			    <label for="exampleFormControlSelect1">Identifiant du proprietaire</label>
			    <select name="pClientID" class="form-control" id="exampleFormControlSelect1">
			    	<option value="<%= compte.getClientID()%>"><%= compte.getClientID()%> (actuel)</option>
			    	
			    	<% List<Integer> listeClient = (List<Integer>)request.getAttribute("liste-id-clients");%>

				   	<c:forEach items="<%= listeClient%>" var="clientid">
					    	<option value="${clientid }">${clientid }</option>
					</c:forEach>
			    </select>
		    </div>
		
		
		
		  </div>
		  <div class="form-row">
		    <div id="selectTypeCompte" class="col-md-4 mb-3">
			    <label for="exampleFormControlSelect1">Type de compte</label>
			    <% String typecompte = compte.getTypeCompte();%>
			    <c:if test='<%= typecompte.equals("courant")%>'>
				    <select name="pTypeCompte" class="form-control" id="exampleFormControlSelect1">
					      <option value="courant">Compte courant</option>
					      <option value="epargne">Compte epargne</option>
				    </select>
			    </c:if>
		
			    <c:if test='<%= typecompte.equals("epargne")%>'>
				    <select name="pTypeCompte" class="form-control" id="exampleFormControlSelect1">
					      <option value="epargne">Compte epargne</option>
					      <option value="courant">Compte courant</option>
				    </select>
			    </c:if>
		    </div>
		    <div id = "decouvert" class="col-md-4 mb-3">
		      <label for="validationDefault02">Decouvert</label>
		      <input name="pDecouvert" type="text" class="form-control" id="validationDefault02" value="<%= compte.getDecouvert()%>" >
		    </div>
		    <div id= "taux" class="col-md-4 mb-3">
		      <label for="validationDefault02">Taux</label>
		      <input name="pTaux" type="text" class="form-control" id="validationDefault02" value="<%= compte.getTaux()%>">
		    </div>
		  </div>
		  
		 	<div class="col-md-3 mb-3">
		      	<input type="hidden" name="action" value="modif"/>
		   	</div>
		   	 <div class="col-md-3 mb-3">
		      	<input type="hidden" name="pIdCompte" value="<%= compte.getIdCompte()%>"/>
		   	</div>
		   	
		   	<div class="form-row">

		  	
		  	
			  	<div id="selectIdClient" class="col-md-4 mb-3">
				    <label for="exampleFormControlSelect1">Identifiant du conseiller</label>
				    <select name="pConseillerID" class="form-control" id="exampleFormControlSelect1">
				    	<option value="<%= compte.getConseillerId %>"><%= compte.getConseillerId() %> (actuel)</option>
				    	
				    	<% List<Integer> listeConseillers = (List<Integer>)request.getAttribute("liste-id-conseillers");%>
	
					   	<c:forEach items="<%= listeConseillers%>" var="conseillerid">
						    	<option value="${conseillerid }">${conseillerid }</option>
						</c:forEach>
				    </select>
			    </div>
		  	</div>
		   	

		  <button class="btn btn-primary" type="submit">Modifier</button>
		</form>



	<br/>
	<br/>
	
	
	 <!-- -------Affichage des message d'erreur/ réussite ----------------------- --> 
	 
	 
	<c:catch var="exception"><% String reussiteOp = (String)request.getAttribute("reussiteOperation"); %></c:catch>
	<c:if test="${ empty exception}">
		<c:if test='${reussiteOperation.equals("true")}'>
			<div class="alert alert-success" role="alert">
	  			${message}
			</div>
		</c:if>
		<c:if test='${reussiteOperation.equals("false")}'>
			<div class="alert alert-danger" role="alert">
	  			${message}
			</div>
		</c:if>
	</c:if>      
      
