	}

	@Override
	public void modifierClient(Client client) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void supprimerClient(int pIdClient) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public Client getClientById(int pIdClient) {
		// TODO Auto-generated method stub
		return null;
	}

}//end class
