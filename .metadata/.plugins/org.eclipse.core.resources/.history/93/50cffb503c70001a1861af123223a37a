<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
    
    <%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Modification d'un client</title>
</head>
<body>

<%-- Récup des informations du client à modifier --%>
<%--
	> infos contenues dans doGet() - case modif : request?setclient-modif
 --%>
 
 <c:set value="${client-modif}" var="clientUpdate"/>
 
 <%-- formulaire pour modifier le client --%>
 <h3>Modifier un client</h3>
 
<form method="post" action="gestion-client-servlet">
	<table>
		<tr> 
			<td>Nom : </td>
			<td> <input type="text" name="pNom" value="${clientUpdate.nom }"/> </td> <!-- récup du nom du client à modif -->
		
		
		</tr>
		<tr> 
			<td>Prénom : </td>
			<td> <input type="text" name="pPrenom" value="${clientUpdate.prenom }"/> </td>
		
		
		</tr>
		<tr> 
			<td>Adresse : </td>
			<td> <input type="text" name="pAdresse" value="${clientUpdate.adresse }"/> </td>
		
		
		</tr>
		<tr> 
			<td>Ville : </td>
			<td> <input type="text" name="pVille" value="${clientUpdate.ville }"/> </td>
		
		
		</tr>
		<tr> 
			<td>Code Postal : </td>
			<td> <input type="text" name="pCodePostal" value="${clientUpdate.codePostal }"/> </td>
		
		
		</tr>
		<tr> 
			<td>Téléphone : </td>
			<td> <input type="text" name="pTelephone" value="${clientUpdate.telepphone }"/> </td>
		
		
		</tr>
		
		<!-- passage de paramètres à la requête dans un champ (input) caché (non visibl à l'user) 
				> nom param = action; valeur param = ajout (action ajout seront cachés)
		-->
		<tr>
			<td>
				<input type="hidden" name="action" value="ajout" value="modification" />
			</td>
		</tr>
		
		
		<tr> 
			
			<td colspan="2"> <input type="submit" value="Ajouter"/> </td>
		
		
		</tr>
	
	
	</table>

</form>

</body>
</html>